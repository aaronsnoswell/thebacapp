<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="BACAppTheme" parent="@android:style/Theme.Black.NoTitleBar">
	    <item name="android:spinnerStyle">@style/Widget.Spinner</item>
        <item name="android:seekBarStyle">@style/Widget.SeekBar</item>
        <item name="android:textViewStyle">@style/Widget.TextView</item>
	</style>
    
    <style name="Widget.Spinner" parent="android:Widget">
		<item name="android:background">@drawable/spinner_white</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="Widget.SeekBar" parent="android:Widget">
        <item name="android:thumb">@drawable/seekbar_white_thumb</item>
        <item name="android:progressDrawable">@drawable/seekbar_white</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:maxHeight">35dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>
    
    <style name="Widget.TextView" parent="android:Widget">
        <item name="android:textColor">#4c4c4c</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="Widget.TextView_BAC" parent="android:Widget">
        <item name="android:textColor">#4c4c4c</item>
        <item name="android:textSize">32sp</item>
    </style>
    
    <style name="Widget.TextView_BAC_OVER" parent="android:Widget">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">32sp</item>
    </style>
    
    <style name="splash_screen">
        <item name="android:padding">0dp</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
    </style>
    
</resources>